<div class="row" id="general_fields">
  <div class="col-md-3">
    <%= f.field_container :attachment, class: ['form-group'] do %>
      <%= f.label :attachment %>:<br/>
      <%= f.file_field :attachment, class: 'form-control' %>
    <% end %>
  </div>
  <div class="col-md-3">
    <%= f.field_container :alt, class: ['form-group'] do %>
      <%= f.label :alt, t('description') %>:<br/>
      <%= f.text_field :alt, :class => 'text form-control' %>
    <% end %>
  </div>
</div>
